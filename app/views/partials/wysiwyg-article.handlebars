<form action="/articles/{{#if article}}edit/{{article._id}}{{else}}add{{/if}}" method="post">

    <nav class="navbar bg-faded">
        <ul class="nav navbar-nav">
            <li class="nav-item pull-xs-right">
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-outline-primary{{#if article.state}}{{#compare article.state
																																												 "draft"}} active{{/compare}}{{else}} active{{/if}}">
                        <input type="radio" name="state" id="draft" value="draft"
                               autocomplete="off"{{#if article.state}}{{#compare article.state "draft"}}
                               checked{{/compare}}{{else}} checked{{/if}}>
											{{__ "Draft"}}
                    </label>
                    <label class="btn btn-outline-danger{{#compare article.state "deleted"}} active{{/compare}}">
                        <input type="radio" name="state" id="deleted"
                               value="deleted"
                               autocomplete="off"{{#compare article.state "deleted"}}
                               checked{{/compare}}>
											{{__ "Deleted"}}
                    </label>
                    <label class="btn btn-outline-success{{#compare article.state "published"}} active{{/compare}}">
                        <input type="radio" name="state" id="published"
                               value="published"
                               autocomplete="off"{{#compare article.state "published"}}
                               checked{{/compare}}>
											{{__ "Published"}}
                    </label>
                </div>
            </li>
        </ul>
    </nav>

    <article id="accordion" role="tablist" aria-multiselectable="true">
        <section class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingOne">
                <p class="panel-title h3">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true"
                       aria-controls="collapseOne">
                        Main
                    </a>
                </p>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                <header>
                    <h1 id="title" class="wysiwyg-plain">{{{article.title}}}</h1>
                    <p id="teaser" class="lead wysiwyg-plain">{{{article.teaser}}}</p>
                </header>
                <div class="wysiwyg" id="text">{{{article.text}}}</div>
            </div>
        </section>
        <section class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
                <p class="panel-title h3">
                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"
                       aria-expanded="false" aria-controls="collapseTwo">
                        Meta-Data
                    </a>
                </p>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                <div class="form-group row">
                    <label for="description" class="col-xs-2 col-form-label">Meta
                        description {{{article.meta.description}}}</label>
                    <div class="col-xs-10">
                        <input class="form-control" type="text" placeholder="Meta description (Max 120 chars)"
                               value="{{{article.meta.description}}}" id="description">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-xs-2 col-form-label">Meta keywords</label>
                    <div class="col-xs-10">
                        <input class="form-control" type="text" placeholder="Meta keywords"
                               value="{{{article.meta.keywords}}}" id="keywords">
                    </div>
                </div>
            </div>
        </section>
    </article>

    <nav class="navbar navbar-fixed-bottom navbar-light bg-faded">
        <div class="container">
            <ul class="nav navbar-nav pull-xs-right">
                <li class="nav-item">
                    <a href="javascript:if(confirm('Realy?')) history.back()" class="btn btn-outline-danger"><i
                            class="fa fa-ban" aria-hidden="true"></i>&nbsp;{{__ "Cancel"}}</a>
                </li>
                <li class="nav-item">
                    <button type="submit"
                            class="btn btn-outline-primary pull-xs-right"
                            role="button">
											{{#if article}}
                          <i class="fa fa-pencil" aria-hidden="true"></i> <span class="hidden-sm-down">&nbsp;{{__
												"Edit"}}</span>
											{{else}}
                          <i class="fa fa-plus" aria-hidden="true"></i> <span class="hidden-sm-down">&nbsp;{{__
												"Add"}}</span>
											{{/if}}
                    </button>
                </li>
            </ul>
        </div>
    </nav>

</form>
